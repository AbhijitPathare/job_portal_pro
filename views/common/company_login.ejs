<form action="/company_login_process" method="post">
    <div class="container">
        <div class="row justify-content-center mt-5 align-items-center">
            <div class="col-md-6">
                <h3>Company Login</h3>
                <br>
                <label for="email">Email:</label>
                <input type="email" name="hr_email" class="form-control" required>
                <br>
                <label for="password">Password:</label>
                <input type="password" name="hr_password" class="form-control" required>
                <br> 
                <button class="btn btn-primary">Login Now</button>
                <br>
                <a href="/company_register">Don't have an account? Register Here</a>
            </div>
        </div>
    </div>
</form>

